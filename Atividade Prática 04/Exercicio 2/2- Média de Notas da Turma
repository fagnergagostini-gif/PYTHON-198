# 2- Média de Notas da Turma

notas = []
while True:
    entrada = input("Digite a nota do aluno (ou 'fim' para calcular a média): ")

    if entrada.lower() == 'fim':
        break

    try:
        nota = float(entrada)
        if 0 <= nota <= 10:
            notas.append(nota)
        else:
            print("Por favor, digite uma nota entre 0 e 10.")
    except ValueError:
        print("Entrada inválida. Por favor, digite um número ou 'fim'.")

if notas: # Verifica se a lista de notas não está vazia
    media_turma = sum(notas) / len(notas)
    print("\n--- Resultado Final ---")
    print(f"Total de alunos avaliados: {len(notas)}")
    print(f"Notas registradas: {notas}")
    print(f"Média da turma: {media_turma:.2f}")
else:
    print("\nNenhuma nota foi inserida para calcular a média.")