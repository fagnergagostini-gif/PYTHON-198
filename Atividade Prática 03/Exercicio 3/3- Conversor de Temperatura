# 3- Conversor de Temperatura
try:
    temp_origem = float(input("Digite a temperatura: "))
    unid_origem = input("Qual a unidade de origem? (C, F, K): ").upper()
    unid_destino = input("Para qual unidade deseja converter? (C, F, K): ").upper()

    temp_convertida = 0
    resultado_valido = True

    if unid_origem == unid_destino:
        temp_convertida = temp_origem
    # Conversões de Celsius
    elif unid_origem == 'C':
        if unid_destino == 'F':
            temp_convertida = (temp_origem * 9/5) + 32
        elif unid_destino == 'K':
            temp_convertida = temp_origem + 273.15
        else:
            resultado_valido = False
    # Conversões de Fahrenheit
    elif unid_origem == 'F':
        if unid_destino == 'C':
            temp_convertida = (temp_origem - 32) * 5/9
        elif unid_destino == 'K':
            temp_convertida = (temp_origem - 32) * 5/9 + 273.15
        else:
            resultado_valido = False
    # Conversões de Kelvin
    elif unid_origem == 'K':
        if unid_destino == 'C':
            temp_convertida = temp_origem - 273.15
        elif unid_destino == 'F':
            temp_convertida = (temp_origem - 273.15) * 9/5 + 32
        else:
            resultado_valido = False
    else:
        resultado_valido = False

    if resultado_valido:
        print(f"\nResultado: {temp_origem}°{unid_origem} é igual a {temp_convertida:.2f}°{unid_destino}")
    else:
        print("Unidades de temperatura inválidas. Use C, F ou K.")

except ValueError:
    print("Entrada de temperatura inválida. Por favor, digite um número.")